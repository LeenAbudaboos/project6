@model Fruitables.Models.product

@{
    ViewBag.Title = "Product Details";
}

<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-6">
                <img src="@Model.img" class="img-fluid w-100 rounded" alt="@Model.name">
            </div>
            <div class="col-lg-6">
                <h1 class="mb-4">@Model.name</h1>
                <h2 class="text-primary mb-4">$ @Model.price / kg</h2>
                <p class="mb-4">@Model.description</p>
                <p class="mb-4"><strong>Type: </strong>@Model.Item_type</p>

                @using (Html.BeginForm("AddToCart", "Cart", FormMethod.Post))
                {
                    @Html.Hidden("productId", Model.id)
                    <button type="submit" class="btn btn-primary btn-lg rounded-pill">
                        <i class="fa fa-shopping-bag me-2"></i> Add to cart
                    </button>
                }
            </div>
        </div>
    </div>
</div>
